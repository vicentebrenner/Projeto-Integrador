<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/webFragment">

    <fragment
        android:id="@+id/nav_home"
        android:name="br.com.musicmaker.ui.home.HomeFragment"
        android:label="Music Makers"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/loginFragment"
        android:name="br.com.musicmaker.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_webFragment"
            app:destination="@id/webFragment"
            app:popUpTo="@id/webFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <fragment
        android:id="@+id/webFragment"
        android:name="br.com.musicmaker.WebFragment"
        android:label="Music Makers"
        tools:layout="@layout/fragment_web" >

        <action
            android:id="@+id/action_webFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>